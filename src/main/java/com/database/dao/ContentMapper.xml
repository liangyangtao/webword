	</select>
	
	<select id="selectnewContent" parameterType="int" resultMap="newContent" >
		SELECT a.content_id AS contentId, a.content_name AS contentName,  
		a.content AS text, a.user_id AS userId, 
		a.insert_time AS contentInsertTime,b.node_id AS nodeId 
		FROM know_content AS a LEFT JOIN know_node_content AS b ON a.content_id=b.content_id
